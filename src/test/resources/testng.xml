<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Suite"
        parallel="tests"
        thread-count="3">

    <listeners>
        <listener class-name="listeners.ExtentTestNGListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Firefox Headless Tests">

        <parameter name="browser" value="FirefoxHeadless"/>

        <classes>
            <class name="tests.herokuapp.LoginTests_herokuapp"/>
            <class name="tests.saucedemo.LoginTests_saucedemo"/>
        </classes>
    </test>

    <test name="Edge EdgeHeadless Tests">

        <parameter name="browser" value="EdgeHeadless"/>

        <classes>
            <class name="tests.herokuapp.LoginTests_herokuapp"/>
            <class name="tests.saucedemo.LoginTests_saucedemo"/>
        </classes>
    </test>

    <test name="Chrome Headless Tests">

        <parameter name="browser" value="ChromeHeadless"/>
        
        <classes>
            <class name="tests.herokuapp.LoginTests_herokuapp"/>
            <class name="tests.saucedemo.LoginTests_saucedemo"/>
        </classes>
    </test>

</suite>
