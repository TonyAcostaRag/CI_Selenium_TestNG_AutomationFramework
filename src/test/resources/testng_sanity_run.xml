<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Suite"
        parallel="tests"
        thread-count="4">

    <listeners>
        <listener class-name="listeners.ExtentTestNGListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Chrome Tests">
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>

        <parameter name="browser" value="Chrome"/>

        <classes>
            <class name="tests.herokuapp.LoginTests_herokuapp"/>
            <class name="tests.saucedemo.LoginTests_saucedemo"/>
        </classes>
    </test>

    <test name="Firefox Tests">
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>

        <parameter name="browser" value="Firefox"/>

        <classes>
            <class name="tests.herokuapp.LoginTests_herokuapp"/>
            <class name="tests.saucedemo.LoginTests_saucedemo"/>
        </classes>
    </test>

    <test name="Edge Tests">
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>

        <parameter name="browser" value="Edge"/>

        <classes>
            <class name="tests.herokuapp.LoginTests_herokuapp"/>
            <class name="tests.saucedemo.LoginTests_saucedemo"/>
        </classes>
    </test>

    <test name="ChromeHeadless Tests">
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>

        <parameter name="browser" value="ChromeHeadless"/>
        
        <classes>
            <class name="tests.herokuapp.LoginTests_herokuapp"/>
            <class name="tests.saucedemo.LoginTests_saucedemo"/>
        </classes>
    </test>

</suite>
